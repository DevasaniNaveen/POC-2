
pipeline {
    agent any

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/DevasaniNaveen/POC-2.git'
            }
        }

        stage('Build & Test') {
            steps {
                echo 'Running build and test steps...'
            }
        }

        stage('Deploy with Ansible') {
            steps {
                ansiblePlaybook inventory: 'localhost',
                playbook: 'ansible/deploy.yml'
            }
        }
    }
}
    
